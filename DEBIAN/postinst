#!/bin/bash

#Comprueba si existe la linea de montaje de veleta en /etc/fstab

	cat /etc/fstab | grep -i "veleta.grx" > /dev/null
	if [ $? -ne 0 ];then
		echo "//veleta.grx/usuarios /media/veleta  cifs  noauto,soft,sec=krb5,iocharset=utf8,user  0 0" >> /etc/fstab
	fi
	
#Insertamos la ejecuciÃ³n del script de inicio de veleta init_veleta.sh en /etc/skel/.profile

	cat /etc/fstab | grep -i "veleta.grx" 
	if [ $? -ne 0 ];then
		echo $HOME"/.grx/init_veleta.sh" >> /etc/skel/.profile
	fi

exit 0
